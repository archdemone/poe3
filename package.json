{
  "name": "browser-mmorpg",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test tests/e2e",
    "e2e:headless": "playwright test --headed=false -r dot",
    "smoke": "npx ts-node scripts/smoke-items.ts",
    "qa:items": "npm run check:items && npm run test && npm run e2e:headless && npm run smoke",
    "qa:cc-launch": "npm run test && npm run e2e:headless",
    "qa:imports": "npm run typecheck && npm run lint && npm run circulars && npm run dead:exports",
    "qa:particles": "vitest run tests/unit/particles.spec.ts && playwright test tests/e2e/hideout.particles.spec.ts --reporter=dot",
    "qa:all": "npm run qa:imports && npm run qa:particles && npm run test && npm run e2e:headless",
    "lint": "eslint --ext .ts,.tsx,.js src",
    "lint:fix": "npm run lint -- --fix",
    "dead:exports": "ts-prune -p tsconfig.json",
    "dead:fix": "ts-prune -p tsconfig.json | grep -v '^$' || true",
    "circulars": "madge --ts-config tsconfig.json --extensions ts,tsx src --circular",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "check:items": "npx ts-node scripts/validate-items.ts"
  },
  "dependencies": {
    "@babylonjs/core": "^8.32.2",
    "@babylonjs/loaders": "^8.32.2",
    "@babylonjs/materials": "^8.32.2",
    "babylonjs": "^6.32.0",
    "cheerio": "^1.1.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "fast-check": "^4.3.0",
    "glob": "^11.0.3",
    "jsdom": "^27.0.1",
    "madge": "^6.1.0",
    "prettier": "^3.3.0",
    "ts-prune": "^0.10.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vitest": "^2.1.0",
    "zod": "^4.1.12"
  }
}
